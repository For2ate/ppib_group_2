services:
  mysql:
    image: "{{ db_image }}"
    container_name: "{{ db_container_name }}"
    restart: "{{ db_restart_policy }}"
    environment:
      MYSQL_ROOT_PASSWORD: "{{ db_root_password }}"
      MYSQL_DATABASE: "{{ db_name }}"
      MYSQL_USER: "{{ db_user }}"
      MYSQL_PASSWORD: "{{ db_user_password }}"
    ports:
      - "{{ db_port }}:3306"
    volumes:
      - "{{ db_data_path }}:/var/lib/mysql" 
    networks:
      - "{{ db_network }}"

networks:
  "{{ db_network }}":
    external: true